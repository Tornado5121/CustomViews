<?xml version="1.0" encoding="utf-8"?>
<com.natife.example.customviews.CustomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.natife.example.customviews.MyCustomView
        android:layout_width="160dp"
        android:layout_height="80dp"
        app:borderColor="#D50A0A"
        app:borderWidth="10dp"
        app:cornerRadius="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="4dp"
        android:text="@string/item_example"
        android:background="@color/black"
        android:textColor="@color/white"/>

</com.natife.example.customviews.CustomLinearLayout>